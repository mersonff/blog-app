<h3 class='text-center'>Adicionando Novo Artigo</h3>
<div class='row'>
	<div class='col-md-12'>
		<%= form_for(@artigo, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class='form-group'>
			<div class='control-label col-md-1'>
				<%= f.label :titulo %> 
			</div>
			<div class='col-md-11'>
			<%= f.text_field :titulo, class: 'form-control', placeholder: 'TÃ­tulo do artigo', autofocus: true %> 
			</div>
		</div>
		<div class='form-group'>
			<div class='control-label col-md-1'> 
				<%= f.label :corpo %>
			</div>
			<div class='col-md-11'>
			<%= f.text_area :corpo, rows: 10, class: 'form-control', placeholder: 'Corpo do artigo' %>
			</div> 
		</div>
		<div class='form-group'>
			<div class='col-md-offset-1 col-md-11'>
				<%= f.submit 'Criar Artigo', class: 'btn btn-primary btn-lg pull-right' %> 
			</div>
		</div> 
		<% end %>
	</div> 
</div>